---
const pageTitle: string = 'About Me';

const identity = {
    name: 'Solaiman Mansyur',
    location: 'Earth',
    occupation: 'Software Engineer',
    interests: ['Coding', 'Writing', 'Reading'],
};

const social = {
    twitter: 'https://twitter.com/emanmks',
    github: 'https://github.com/emanmks'
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/blog">Blog</a>

        <h1>{pageTitle}</h1>
        <p>Here are a few facts about me:</p>
        <ul>
          <li>My name is {identity.name}.</li>
          <li>I live in {identity.location} and I work as a {identity.occupation}.</li>
          {identity.interests.length >= 2 &&
            <li>My hobbies are: {identity.interests.join(" & ")</li>
          }
        </ul>
        <p>My skills are:</p>
        <ul>
          {skills.map((skill) => <li>{skill}</li>)}
        </ul>

        <hr>

        {happy && <p>I am happy to be learning Astro!</p>}

        {finished && <p>I finished this tutorial!</p>}

        {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
      </body>
</html>
